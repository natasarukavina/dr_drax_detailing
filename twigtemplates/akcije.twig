{% extends "base.twig" %}

{% block content %}

    <div class="akcije">
        <div class="akcije--left">
            <div class="titles akcije--left--suzi">SUZI Akcije</div>
            <div>
                {% set Akcije = fetch('Akcije') %}
                {% set tip = _GET['tip'] ? _GET['tip'] : Akcije[0]['Slug'] %}
                {% set SelektovanaAkcija = {} %}
                {% for item in Akcije %}
                    {% if item.Slug == tip %}    
                        {% set SelektovanaAkcija = item %}
                    {% endif %}

                    <div class="sub_titles akcije--left--naslov">
                        <a style="font-weight: bold;" class="{{(item.Slug==tip)?'clicked':''}}" href="akcije?tip={{item.Slug}}">{{ item.Naslov }}</a>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="akcije--right">
            <img class="akcije--right--slika" src="image.php/?id={{SelektovanaAkcija.Slika1}}">
            <div class="akcije--right--text">{{SelektovanaAkcija.Text | raw }}</div>

        </div>
        </div>
    </div>

{% endblock %}