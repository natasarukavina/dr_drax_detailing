{% extends "base.twig" %}

{% block content %}

    <div class="akcije">
        <div class="akcije--left">
            <div class="titles akcije--left--suzi">SUZI Akcije</div>
            <div>
                {% set tip = _GET['tip']?_GET['tip']:'1'%}
                    {% for item in fetch('Akcije') %}
                            <div class="sub_titles akcije--left--naslov {{(item.id==tip)?'clicked':''}}"><a href="akcije?tip={{item.id}}">{{ item.Naslov }}</a></div>
                    {% endfor %}
            </div>
        </div>
        <div class="akcije--right">
            {% set Akcije = fetch("Akcije", { 'id':tip } )[0] %}
            <div style="flex:2">
            <div>{{Akcije.Slika1}}</div>
            
            <p>{{Akcije.Text}}</p>
            
            

        </div>
        </div>
    </div>

{% endblock %}