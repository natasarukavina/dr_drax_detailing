{% extends "base.twig" %}

{% block content %}
<div class="home">
    <div class="home--part">
        <div class="home--part-istaknuta-akcija">
                {% set IstaknutaAkcija =  fetch('IstaknutaAkcija') %}
                {# <img style="height:335px; width: 100%;" src="img/{{ IstaknutaAkcija.Slika1 }}"> #}
                {% if IstaknutaAkcija.Slika1 %}
                    <a href="akcije/{{IstaknutaAkcija.Slug}}"><div style="background-image: url('img/{{IstaknutaAkcija.Slika1}}'); background-size: contain;
                    background-repeat: no-repeat;     background-position: center; height: 335px;"></div></a>
                {% endif %}
                <div class="title">{{ IstaknutaAkcija.Naslov }}</div>
                <div class="text">{{IstaknutaAkcija.Text | raw}}  </div>
                <div class="more"><a href="{{ IstaknutaAkcija.href }}/{{IstaknutaAkcija.Slug}}">Vidi ceo tekst...</a></div>

        </div>
        <div class="home--part-2">
                <div class="suzi-akcije"> SUZI Akcije</div>
                <div class="overflow">
                        {% for item in fetch('Akcije') %}
                        <div class="overflow-border">
                            <div class="naslov"><a href="akcije/{{item.Slug}}">{{ item.Naslov }}</a></div>
                           <div class="dates">{{item.Datum | date("d.m.Y")}}</div>
                        </div> 
                        {% endfor %}
                </div>
                <a class="more" href= "akcije">Sve SUZI akcije...</a>
        </div>
    </div>
    <div class="home--part2">
        <div class="home--part2--vesti">
            <div class="home--part2--vesti--title titles">SUZI Vesti</div>
            <div class="home--part2--vesti--naslovi">
                    {% for vesti_suzi in fetch('Vesti_suzi') %}
                    <div class="home--part2--vesti--naslovi-1">
                        <div class="naslov sub_titles"><a href="vest-suzi/{{vesti_suzi.Slug}}">{{ vesti_suzi.Naslov }}</a></div>
                        {% if vesti_suzi.Slika1 %}
                        <div class="slika-small"><a href="vest-suzi/{{vesti_suzi.Slug}}"><img class="slika" src="img/{{ vesti_suzi.Slika1 }}"></a><div>
                        {% endif %}
                        <div class="dates">{{vesti_suzi.Datum | date("d.m.Y")}}</div>
                    </div>
                    {% endfor %}
            </div>
            <a class="more" href= "vesti">Sve SUZI vesti...</a>
        </div>
        <div class="home--part2--vesti">
                <div class="home--part2--vesti--title titles">Vesti iz sveta</div>
                <div class="home--part2--vesti--naslovi">
                    {% for vesti_svet in fetch('Vesti_svet') %}
                    <div class="home--part2--vesti--naslovi-1">
                        <div class="sub_titles"><a href="vest-svet/{{vesti_svet.Slug}}">{{ vesti_svet.Naslov }}</a></div>
                        {% if vesti_svet.Slika1 %}
                        <div class="slika-small"><a href="vest-svet/{{vesti_svet.Slug}}"><img class="slika" src="img/{{ vesti_svet.Slika1 }}"></a></div>
                        {% endif %}
                        <div class="dates">{{vesti_svet.Datum | date("d.m.Y")}}</div>
                    </div>
                    {% endfor %}
                </div>
                <a class="more" href= "vesti">Sve vesti iz sveta...</a>
        </div>
        <div class="home--part2--vesti">
            <div class="home--part2--vesti--title titles">SUZI Obaveštenja</div>
            <div class="home--part2--vesti--naslovi">
                    {% for suzi_obavestenja in fetch('Obavestenja') %}
                    <div class="home--part2--vesti--naslovi-1">
                        <a href="obavestenja/{{suzi_obavestenja.Slug}}"><div class="sub_titles">{{ suzi_obavestenja.Naslov }}</div></a>
                        <div class="dates">{{suzi_obavestenja.Datum | date("d.m.Y")}}</div>
                    </div>
                    {% endfor %}
            </div>
            <a class="more" href= "obavestenja">Sva SUZI obaveštenja...</a>
        </div>
    </div>
    <div class="home--part2">
         <div class="home--part2--vesti">
                <div class="home--part2--vesti--title titles">SUZI prikazi</div>
                <div class="home--part2--vesti--naslovi">
                    {% for vesti_prikazi in fetch('Prikazi') %}
                    <div class="home--part2--vesti--naslovi-1">
                        <div class="sub_titles"><a href="suzi-prikaz/{{vesti_prikazi.Slug}}">{{ vesti_prikazi.Naslov }}</a></div>
                        {% if vesti_prikazi.Slika1 %}
                        <div class="slika-small"><a href="suzi-prikaz/{{vesti_prikazi.Slug}}"><img class="slika" src="img/{{ vesti_prikazi.Slika1 }}"></a></div>
                        {% endif %}
                        <div class="dates">{{vesti_prikazi.Datum | date("d.m.Y")}}</div>
                    </div>
                    {% endfor %}
                </div>
                <a class="more" href= "vesti">Svi prikazi...</a>
        </div>
        <div class="home--part2--vesti">
                <div class="home--part2--vesti--title titles">SUZI eGlasnik</div>
                <div class="home--part2--vesti--naslovi">
                    {% for suzi_eGlasnik in fetch('eGlasnik') %}
                    <div class="home--part2--vesti--naslovi-1">
                        <div class="sub_titles"><a href="publikacije/Suzi-Elektronski-glasnik/{{suzi_eGlasnik.Slug}}">{{ suzi_eGlasnik.Naslov }}</a></div>
                        {% if suzi_eGlasnik.Slika1 %}
                        <div class="slika-small"><a href="publikacije/Suzi-Elektronski-glasnik/{{suzi_eGlasnik.Slug}}"><img class="slika" src="img/{{ suzi_eGlasnik.Slika1 }}"></a></div>
                        {% endif %}
                        <div class="dates">{{suzi_eGlasnik.Datum | date("d.m.Y")}}</div>
                    </div>
                    {% endfor %}
                </div>
                <a class="more" href= "publikacije/Suzi-Elektronski-glasnik">Svi brojevi...</a>
        </div>
        <div class="home--part2--vesti">
                <div class="home--part2--vesti--title titles">Korisni linkovi</div>
                <div class="home--part2--vesti--naslovi">
                    {% for korisni_linkovi in fetch('KorisniLinkovi') %}
                    <div class="home--part2--vesti--naslovi-1">
                        <div class="sub_titles-link">{{ korisni_linkovi.Naslov }}</div>
                        <a class="link" href="{{ korisni_linkovi.Link }}">{{ korisni_linkovi.Link }}</a>
                    </div>
                    {% endfor %}
                </div>
                {# <a class="more" href= "#">Svi linkovi...</a> #}
        </div>
    </div>
</div>

{% endblock %}
